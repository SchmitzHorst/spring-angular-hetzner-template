# Database Configuration
POSTGRES_DB=appdb
POSTGRES_USER=appuser
POSTGRES_PASSWORD=changeme_secure_password_here

# Spring Boot Configuration
SPRING_PROFILE=prod

# Domain Configuration (for production with SSL)
DOMAIN=example.com
ACME_EMAIL=admin@example.com

# Traefik Dashboard Authentication
# Generate with: echo $(htpasswd -nb admin password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_AUTH=admin:$$apr1$$xyz$$abcdef

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=ghcr.io/yourusername/spring-angular-hetzner-template
IMAGE_TAG=latest

# GitHub Container Registry Authentication
# GITHUB_TOKEN=ghp_your_personal_access_token_here
